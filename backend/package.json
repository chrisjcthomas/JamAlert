{
  "name": "jamalert-backend",
  "version": "1.0.0",
  "description": "JamAlert Community Alert System Backend",
  "main": "dist/src/functions/*.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "prestart": "pnpm run build",
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:load": "jest --testPathPattern=load --testTimeout=300000",
    "test:api": "jest --testPathPattern=api",
    "test:database": "jest --testPathPattern=database",
    "test:all": "pnpm run test:coverage && pnpm run test:integration && pnpm run test:api && pnpm run test:database",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0",
    "@prisma/client": "^5.7.0",
    "@types/twilio": "^3.19.2",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.3",
    "uuid": "^13.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/axios": "^0.9.36",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.14",
    "@types/sharp": "^0.32.0",
    "@types/uuid": "^10.0.0",
    "azure-functions-core-tools": "^4.0.5455",
    "jest": "^29.7.0",
    "prisma": "^5.7.0",
    "ts-jest": "^29.1.1",
    "twilio": "^4.23.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "pnpm": {
    "overrides": {
      "jws": ">=3.2.3"
    }
  }
}
